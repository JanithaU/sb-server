<script type="text/javascript">
  
function ajaxfunction(val1, val2){
  console.log(val1)
  console.log(val2)
    $.ajax({
            type: "POST",
            url: "{{ url_for('updatePlaylistDuration') }}",
            data: {
                plmedia_id: val1,
                duration: val2,
                playlist_id:{{playlist.id}}

            },
            success: function(data) {
                location.reload();
            }
            
        });
     };

</script>

