{% extends "layout.html" %}
{% block content %}

<h2>User<a class="btn btn-info btn-sm float-right" href="{{ url_for('addUser')}}" role="button">+ Add User</a></h2> 

<hr>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">User Name</th>
      <th scope="col">Status</th>
      <th scope="col">Date</th>
      <th scope="col">Action</th>
    
    </tr>
  </thead>
  <tbody>
         {% for br in users %}
            <tr>
              <td>{{ br.firstname }}</td>
              <td>{{ br.username }}</td>
              <td>
              	{% if br.active_status == 1 %}
              	<p>active</p>
              	{% else %}
              	<p> Deactive </p>
              	{% endif %}
              </td>
              <td>{{ br.date_created.strftime('%m/%d/%Y ') }}</td>
              <td><a href="{{ url_for('viewUser', user_id=br.id) }}" class="badge badge-info">View</a>&nbsp;<a href="{{ url_for('updateUser', user_id=br.id) }}" class="badge badge-secondary">Update</a>&nbsp;<!--<a href="#" class="badge badge-danger" data-toggle="modal" data-target="#deleteModal">Delete</a>-->
                    <form action="{{ url_for('deleteUser', user_id=br.id) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete user {{ br.username }} ?')">
                        <input class="btn btn-danger btn-xs" type="submit" value="Delete" >
                    </form>
              </td>
            </tr>
            {% endfor %}
  </tbody>
</table>
<script type="text/javascript">
  function ConfirmDelete()
{
  var x = confirm("Are you sure you want to delete?");
  if (x)
      return true;
  else
    return false;
}

</script>
<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete User ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        <form action="{{ url_for('deleteUser', user_id=3) }}" method="POST">
            <input class="btn btn-danger" type="submit" value="Delete">
        </form>
      </div>
    </div>
  </div>
</div>

{% endblock content %}