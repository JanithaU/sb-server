{% extends "layout.html" %}
{% block content %}

<h2>Branch<a class="btn btn-info btn-sm float-right" href="{{ url_for('branch_Add')}}" role="button">+ Add Branch</a></h2> 
<hr>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th scope="col">Group</th>
      <th scope="col">Branch</th>
      <th scope="col">Status</th>
      <th scope="col">Date</th>
      <th scope="col">Action</th>
    
    </tr>
  </thead>
  <tbody>
         {% for br in branch %}
            <tr>
              <td>{{ br.group.branch_group_name }}</td>
              <td>{{ br.branch_name }}</td>
              <td>
              	{% if br.active_status == 1%}
              	<p>active</p>
              	{% else %}
              	<p> Deactive </p>
              	{% endif %}
              </td>
              <td>{{ br.date_created.strftime('%m/%d/%Y') }}</td>
              <td><a href="{{ url_for('branchView', branch_id=br.id) }}" class="badge badge-info">View</a>&nbsp;<a href="{{ url_for('updateBranch', branch_id=br.id) }}" class="badge badge-secondary">Update</a>&nbsp;<!--<a href="#" class="badge badge-danger" data-toggle="modal" data-target="#deleteModal">Delete</a>-->
                    <form action="{{ url_for('deleteBranch', branch_id=br.id) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete Branch : {{ br.branch_name }} ?')">
                        <input class="btn btn-danger btn-xs" type="submit" value="Delete" >
                    </form></td>
            </tr>
            {% endfor %}
  </tbody>
</table>

{% endblock content %}